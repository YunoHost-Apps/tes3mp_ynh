{
    "name": "TES3MP",
    "id": "tes3mp",
    "packaging_format": 1,
    "description": {
        "en": "TES3MP package for YunoHost.",
        "fr": "TES3MP pour YunoHost."
    },
    "version": "0.7.0",
    "url": "https://tes3mp.com/",
    "license": "free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for TES3MP",
                    "fr": "Choisissez un nom de domaine pour TES3MP"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for TES3MP /tes3mp is accepted",
                    "fr": "Choisissez un chemin pour TES3MP /tes3mp est accept√©"
                },
                "example": "/tes3mp",
                "default": "/tes3mp"
            },
            {
                "name": "port",
                "type": "port",
                "ask": {
                    "en": "Select your port ?",
                    "fr": "Choisir votre port ?"
                },
                "example": "25565",
                "default": "25565"
            },
            {
                "name": "players",
                "type": "players",
                "ask": {
                    "en": "Select players number ?",
                    "fr": "Choisir nombre de joueur ?"
                },
                "example": "64",
                "default": "64"
            },
            {
                "name": "lang",
                "type": "lang",
                "ask": {
                    "en": "Select your language ?",
                    "fr": "Choisir votre langue ?"
                },
                "choices": ["FR", "EN", "RU"],
                "default": "EN"
            },
            {
                "name": "passwd",
                "type": "passwd",
                "ask": {
                    "en": "Enter your password for TES3MP !",
                    "fr": "Entrez votre mot de passe pour TES3MP !"
                },
                "optional": true,
                "example": ""
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            }
        ]
    }
}
